using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter the Number :");
        int a = Convert.ToInt32(Console.ReadLine());
        // int flag = 0;
        if(a%2 == 0){
            // flag =1;
            Console.WriteLine(a + " is even Number !");
        }
        else{
            Console.WriteLine(a +" is odd Number !");
        }
        
    }
}
